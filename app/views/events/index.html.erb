<!-- Main jumbotron for a primary marketing message or call to action -->
<main role="main">
<div class="jumbotron">
  <div class="d-flex justify-content-center">
    <div><h1 class="display-3">Welcome to Bogota Sports Events</h1>
    <p> Find your favorite local sports events.</p>
    <p><a class="btn btn-primary btn-lg" href="/events/" role="button"> View All EventsÂ»</a></p>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
<div class="row">
<p><% @event.each do |e| %> </p>
  <div class="col-md-4">
    <div class="card-deck">
      <div class="card">
        <%= image_tag e.pic, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"><%= e.place %></h5>
          <p class="card-text"><%= e.date %></p>
          <p class="card-text"><%= e.time %></p>
          <p class="card-text"><%= e.price %></p>
          <p class="card-text"><%= e.description %></p>
          <%= button_to "Sign Up", "/events/#{e.id}", :method => "get", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <p></p>
    </div>
  <%end%>
  </div>
  </div>

</main>
